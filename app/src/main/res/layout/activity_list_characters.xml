<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_list_characters_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="42dp"
            android:text="BUSCA MARVEL TESTE FRONT END"/>

        <TextView
            android:id="@+id/text_character_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do personagem"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/text_list_characters_title"
            app:layout_constraintStart_toStartOf="@id/text_list_characters_title"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_character_name_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="42dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_character_name_label"
            app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_character_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="12dp"
            android:background="@null"
            app:layout_constraintTop_toBottomOf="@id/text_list_characters_title"
            app:layout_constraintStart_toStartOf="@id/text_list_characters_title"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/view_pager_label"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:background="@color/colorPrimary"
            android:text="Nome"
            android:textColor="@color/colorWhite"
            android:paddingTop="6dp"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="80dp"
            app:layout_constraintTop_toBottomOf="@id/text_character_name_input_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/character_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/view_pager_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view_pager_indicator"/>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/view_pager_indicator"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tabIndicatorHeight="0dp"
            app:tabMaxWidth="14dp"
            app:tabMinWidth="14dp"
            app:tabMode="scrollable" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/empty_list_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image_view_empty_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="64dp"
                android:src="@drawable/ic_empty_list"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.2" />

            <TextView
                android:id="@+id/text_view_empty_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="64dp"
                android:layout_marginTop="16dp"
                android:text="@string/empty_list_helper_text"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/image_view_empty_list" />

            <Button
                android:id="@+id/button_try_again"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_margin="48dp"
                android:alpha="0.8"
                android:background="@drawable/button_background"
                android:text="@string/global_try_again"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_view_empty_message" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.hero.code.presentation.util.placeholder.PlaceholderView
            android:id="@+id/placeholder_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>